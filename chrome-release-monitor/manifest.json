{
  "manifest_version": 3,
  "name": "Library Release Monitor",
  "version": "0.1.0",
  "description": "Monitor favorite libraries and get notified about critical releases.",
  "permissions": ["storage", "alarms", "notifications"],
  "host_permissions": [
    "https://registry.npmjs.org/*",
    "https://pypi.org/pypi/*",
    "https://crates.io/api/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Library Release Monitor"
  },
  "options_page": "src/options.html"
}
